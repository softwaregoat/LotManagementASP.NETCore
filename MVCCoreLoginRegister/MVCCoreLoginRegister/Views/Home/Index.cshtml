            </div>
        </figure>
    </div>
    <div class="col-md-4">
        <figure class="card card-product">
            <div class="img-wrap">
                <img src="~/Image/2.jpg">
            </div>
            <div class="bottom-wrap">
                <a href="" class="btn btn-sm btn-primary form-control">Order Now</a>
            </div>
        </figure>
        <div class="row">
            <div class="col-md-5">
                <a class="btn btn-sm btn-primary form-control" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
            </div>
            <div class="col-md-2"></div>
