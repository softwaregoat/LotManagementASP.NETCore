@section Scripts {
    <script>
        $(document).ready(function () {
            $('input.lot-update').click(function () {
                if ($(this).prop('checked')) {
                    var now = new Date();
                    let log = now.toLocaleString();
                    $(this).closest('tr').find('input.date-time').val(log);
                }
                else {
                    $(this).closest('tr').find('input.date-time').val('');
                    window.location.href = "/ProductSetup/LineClearance";
                }
            });
            $('input.save').click(function () {
                let tr = $(this).closest('tr');
                if ($(tr).find('input.date-time').val() == '') {
                    toastr.warning('Date/Cat. Time is empty.');
                    return;
                }
                if ($(tr).find('input.carton-no').val() == '') {
                    toastr.warning('Carton No is empty.');
                    return;
                }
                if ($(tr).find('input.polymer1').val() == '') {
                    toastr.warning('Polymer 1 is empty.');
                    return;
                }
                if ($(tr).find('input.polymer2').val() == '') {
                    toastr.warning('Polymer 2 is empty.');
                    return;
                }
                if ($(tr).find('input.masterbatch').val() == '') {
                    toastr.warning('Master Batch is empty.');
                    return;
                }
                if ($(tr).find('input.slip').val() == '') {
                    toastr.warning('Slip Additive is empty.');
                    return;
                }
                window.location.href = "/Home/JobBagOverview";
            });

            var timer2 = "5:00";
            timerDown(timer2);
            redirectPage(5, "/Home/JobBagOverview");
        });
    </script>
